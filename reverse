<body  onload="countTime()">
    <div class="center-notin-center">  
        <p style="font-size: 4em;"> 距离圣诞节还有:<br> <span id="_d">00</span>  
        <span id="_h">00</span>  
        <span id="_m">00</span>  
        <span id="_s">00</span>  
        </p>
        <br> <br>
        <img style="width: 100%; " src="1.png">
    </div> 
    <div style="width: 100%;"class="center-in-center">
        <textarea id="reviewww" style="font-size: 5em;" rows="8" cols="20">
输入你要反转的文字
        </textarea>
        <br style="clear: both;">
        <h1 style="font-size: 5em;float: left;"onclick="reverseFunction()" >反转</h1>
        <h1 style="font-size: 5em;float: left;margin-left: 20%"onclick="nullFunction()" >清除</h1>
    </div>
</body>
<script type="text/javascript">
 
    console.log('---------------------------');
    console.log('2019 ShenZeYi GoGoGo');
    console.log('from minidewep');
    console.log('---------------------------');
     function countTime() {  
            var date = new Date();  
            var now = date.getTime();   
            var str="2018/12/25 00:00:00";
            var endDate = new Date(str); 
            var end = endDate.getTime();  
            var leftTime = end-now; 
            var d,h,m,s;  
             if (leftTime>=0) {  
                 d = Math.floor(leftTime/1000/60/60/24);  
                 h = Math.floor(leftTime/1000/60/60%24);  
                 m = Math.floor(leftTime/1000/60%60);  
                 s = Math.floor(leftTime/1000%60);                     
             }   
             document.getElementById("_d").innerHTML = d+"天";  
             document.getElementById("_h").innerHTML = h+"时";  
             document.getElementById("_m").innerHTML = m+"分";  
             document.getElementById("_s").innerHTML = s+"秒";  
             setTimeout(countTime,1000);  
            }  

    function reverseFunction(){
        var text = document.getElementById('reviewww').value ;
        var txet = text.split("").reverse().join("");
        document.getElementById("reviewww").value =txet;
    }
    function nullFunction(){
        document.getElementById("reviewww").value ="";
    }

</script>
